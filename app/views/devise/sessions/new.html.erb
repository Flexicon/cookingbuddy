<div class="hero">
  <div class="hero-content flex-col lg:flex-row-reverse lg:justify-end lg:gap-12">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold">Sign in now!</h1>
      <p class="py-6">
        Start reaping the benefits of your own personal CookingBuddy. Track recipes, plan your meals, and more.
      </p>
    </div>
    <div class="card bg-base-100 w-full max-w-sm shrink-0 shadow-2xl">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card-body" }) do |f| %>
        <div class="form-control">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "input input-bordered" %>
        </div>
        <div class="form-control">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "input input-bordered" %>
          <label class="label">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'label-text-alt link link-hover' %><br />
          </label>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center gap-2">
            <%= f.check_box :remember_me, class: "checkbox" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="form-control mt-6">
          <%= f.submit "Sign in", class: "btn btn-primary" %>
        </div>

        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
