<nav class="mb-10 flex justify-between">
  <div class="text-3xl font-bold">
    <%= link_to root_path, class: 'text-primary -skew-y-6 block' do %>
      CookingBuddy
    <% end %>
  </div>

  <div class="flex items-center gap-3">
    <% if user_signed_in? %>
      <%= render DropdownComponent.new(trigger_class: "btn btn-sm btn-ghost", hover: true, align_end: true) do |component| %>

        <% component.with_trigger do %>
          <%= lucide_icon("settings", class: "h-4 w-4") %>
        <% end %>

        <% component.with_item do %>
          <%= link_to products_path do %>
            <%= lucide_icon("package-search", class: "h-5 w-5") %>
            <span>Manage Products</span>
          <% end %>
        <% end %>

        <% component.with_item do %>
          <%= button_to(
            destroy_user_session_path,
            method: :delete,
            title: 'Sign out',
            class: "gap-2",
          ) do %>
            <%= lucide_icon("log-out", class: "h-5 w-5") %>
            <span>Sign Out</span>
          <% end %>
        <% end %>

      <% end %>
    <% end %>
  </div>
</nav>
