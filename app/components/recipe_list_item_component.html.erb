<div class="flex items-center gap-4">
  <%= link_to recipe_path(@recipe), data: { turbo_frame: "_top" } do %>
    <%= image_tag @recipe.image_or_placeholder(
      variant: :thumb,
      placeholder_options: {
        width: 56,
        height: 56,
      },
    ),
    class: "h-14 w-14 shrink-0 object-cover rounded-full bg-gray-300" %>
  <% end %>
  <div class="flex flex-col gap-1">
    <%= link_to @recipe.name,
    recipe_path(@recipe),
    class: "link link-hover",
    data: {
      turbo_frame: "_top",
    } %>
    <% if @show_category %>
      <%= render RecipeCategoryComponent.new(category: @recipe.category) %>
    <% end %>
  </div>
</div>
