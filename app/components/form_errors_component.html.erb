<% if errors? %>
  <div class="alert alert-error">
    <div class="flex-1">
      <%= lucide_icon("circle-alert", class: "h-6 w-6") %>
    </div>
    <div class="flex-1">
      <label class="font-bold">
        <% if title.present? %>
          <%= title %>
        <% else %>
          Oops, couldn't save this
          <%= model_name %>
        <% end %>
      </label>
      <ul>
        <% error_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
